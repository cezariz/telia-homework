# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 100
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{groovy,java,kt}]
continuation_indent_size = 8
