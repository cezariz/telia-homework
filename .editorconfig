# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 100

[*.{groovy,java,kt,xml}]
indent_style = space
indent_size = 4
continuation_indent_size = 8
trim_trailing_whitespace = true
insert_final_newline = true

[*.xml]
indent_style = space
indent_size = 4

[*.graphql]
indent_style = space
indent_size = 4

[*.properties]
indent_style = space
indent_size = 2

